                                echo "üßπ Eliminando JAR anterior..."
                                rm -f $DEPLOY_BACKEND_DIR/$SERVICE_EUREKA_NAME_JAR
                                
                                echo "üì¶ Copiando nuevo JAR a $DEPLOY_BACKEND_DIR ..."
